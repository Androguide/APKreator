<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:baselineAligned="false"
    android:minHeight="100dip"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="12dip"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:layout_weight="30"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/card_icon_accessibility"
            android:scaleType="centerCrop"
            android:src="@drawable/no_thumbnail" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="70"
        android:orientation="vertical"
        android:paddingTop="4dip"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="99"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/card_title"
                android:textColor="#33B6EA"
                android:textSize="18sp" />

            <!-- TODO: Add android:autoLink="true" to the description, a bug makes layout preview impossible with autoLink -->
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dip"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="50"
                android:text="Description"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="16dip"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:layout_width="20dip"
                android:layout_height="match_parent"
                android:contentDescription="@string/card_icon_accessibility"
                android:padding="1dip"
                android:src="@drawable/ic_action_av_play" />

            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:text="1:35"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="match_parent"
                android:contentDescription="@string/card_icon_accessibility"
                android:src="@drawable/ic_action_rating_good" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:text="65"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="match_parent"
                android:contentDescription="@string/card_icon_accessibility"
                android:padding="1dip"
                android:src="@drawable/ic_action_rating_important" />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:text="4.63"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="20dip"
                android:layout_height="match_parent"
                android:contentDescription="@string/card_icon_accessibility"
                android:padding="1dip"
                android:src="@drawable/ic_action_social_chat" />

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="1"
                android:text="38"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>